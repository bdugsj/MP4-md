# ==============================
# 视频转录API服务 - 环境变量配置
# ==============================

# [openaiAPI配置]
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-
WHISPER_MODEL=whisper-1
GPT_MODEL=gpt-4o

# [处理参数]
BATCH_SIZE=10
MAX_FILE_SIZE_MB=1000
DOWNLOAD_TIMEOUT=300

# [路径配置]
DOWNLOAD_DIR=./downloads
TRANSCRIPTION_OUTPUT_DIR=./output/transcriptions
PROCESSED_OUTPUT_DIR=./output/processed
TEMP_DIR=./temp

# B站视频解析配置（使用公益api，请勿商用）
BILIBILI_API_URL=https://api.cenguigui.cn/api/bilibili/api.php
BILIBILI_MAX_RETRIES=3
BILIBILI_RETRY_DELAY=2

# [处理选项]
USE_GPT_DETECTION=false
SAVE_INTERMEDIATE_RESULTS=true
CLEANUP_TEMP_FILES=true
ENABLE_CORRECTION=true
ENABLE_SUMMARIZATION=false
ENABLE_FORMATTING=true

# [Web服务配置]
WEB_PORT=8000
PROCESSING_PROMPT=总结字幕内容\n{text}

# GPT文本处理配置
GPT_MAX_RETRIES=3
GPT_RETRY_DELAY=2
GPT_TIMEOUT=60
GPT_502_RETRY_MULTIPLIER=3
GPT_503_RETRY_MULTIPLIER=2
GPT_502_BASE_DELAY=5
GPT_503_BASE_DELAY=10

# Whisper音频转录配置
WHISPER_MAX_RETRIES=3
WHISPER_RETRY_DELAY=2
WHISPER_TIMEOUT=300

